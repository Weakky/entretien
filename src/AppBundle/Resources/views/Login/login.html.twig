{% extends "::base.html.twig" %}

{% block title %}AppBundle:Login:login{% endblock %}

{% block body %}
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3>Login</h3>
        </div>
        <div class="panel-body">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey }}
                </div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input
                            class="form-control"
                            type="text"
                            name="_username"
                            id="username"
                            value="{{ last_username }}"
                    >
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" type="password" name="_password" id="password">
                </div>
                <button class="btn btn-info pull-right ">Sign in</button>
                <a href="/register" class="btn btn-default pull-right" style="margin-right: 5px;">Register</a>
            </form>
        </div>
    </div>
{% endblock %}
